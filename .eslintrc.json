{
  "env": {
    "browser": true,
    "es6": true
  },
  "extends": [
    "airbnb",
    "plugin:prettier/recommended",
    "prettier/react"
  ],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "plugins": [
    "react"
  ],
  "rules": {
    "prettier/prettier": [
      "warn",
      {
        "printWidth": 85,
        "trailingComma": "es5",
        "singleQuote": true,
        "arrowParens": "always",
        "semi": false
      }
    ],
    "semi": [
      "warn",
      "never"
    ]
  }
}